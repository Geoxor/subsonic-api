{
  "name": "subsonic-api",
  "version": "1.3.0",
  "description": "Subsonic API for Node.js and browsers",
  "license": "MIT",
  "author": "Henry Gressmann <mail@henrygressmann.de>",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "watch": "npm run build:esbuild -- --watch",
    "build": "npm run build:esbuild && npm run types",
    "build:esbuild": "esbuild src/*.ts --minify --bundle --outdir=lib --platform=neutral  --external:crypto --external:spark-md5 --external:node-fetch --target=node16 --format=esm",
    "dev": "node --loader=ts-node/esm --no-warnings src/index.ts",
    "release": "release-it",
    "test": "vitest",
    "types": "tsc -p tsconfig.build.json",
    "preversion": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@types/spark-md5": "^3.0.2",
    "esbuild": "^0.19.2",
    "np": "^8.0.4",
    "release-it": "^16.1.5",
    "rome": "^12.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "spark-md5": "^3.0.2"
  }
}
