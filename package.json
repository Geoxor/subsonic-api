{
  "name": "subsonic-api",
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "./lib/"
  ],
  "scripts": {
    "watch": "npm run build:esbuild -- --watch",
    "build": "npm run build:esbuild && npm run types",
    "build:esbuild": "esbuild src/*.ts --minify --bundle --splitting --chunk-names=chunks/[name]-[hash] --outdir=lib --platform=node --external:node-fetch --target=node16 --format=esm",
    "dev": "node --loader=ts-node/esm --no-warnings src/index.ts",
    "release": "release-it",
    "test": "vitest",
    "types": "tsc -p tsconfig.build.json",
    "preversion": "npm run build",
    "xsd": "xsd-ts ./subsonic-rest-api-1.16.1.xsd src/types/subsonic.ts"
  },
  "devDependencies": {
    "@explodingcamera/eslint-config": "^24.1.0",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.8.3",
    "@xsd-tools/typescript": "^0.1.1",
    "esbuild": "^0.15.10",
    "eslint": "^8.25.0",
    "release-it": "^15.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vitest": "^0.24.1",
    "xmldom": "^0.6.0",
    "xsd-tools": "^0.1.1",
    "md5": "^2.3.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "node-fetch": "^3.2.10"
  }
}
